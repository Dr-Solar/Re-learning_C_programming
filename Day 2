#include <stdio.h>
int main() {
int sum,x,i;       
sum=0;
printf("1:%d\n",sum); 
x=0;
printf("2:%d\n",sum);
i=0;   
printf("3:%d\n",sum);            
loop: if (i<=10) {
    x=sum+i;
    printf("4:%d\n",sum); 
    sum=x;
    printf("5:%d\n",sum); 
    i=i+1;
    printf("6:%d\n",sum);
    goto loop;
}              
printf("%d\n",sum);                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                     
    return 0;
} 
