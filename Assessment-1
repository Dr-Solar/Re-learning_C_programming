y=x+y;
printf("one's digit 2= %d",y);
     return 0;
     }

//Question-18: Get a number from the user,substract 5 from the number if it is odd and print the result.do not use if condition

#include <stdio.h>
int main() {
int x,y;
printf("Enter Number:");
scanf("%d",&x);
y=x%2;
y=y*x;
y=y-5;
printf("Result= %d",y);
     return 0;
     }


