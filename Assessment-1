//Question-11: Get a three digit number from the user,print the sum of the digits.

// With 4 variables 
#include <stdio.h>
int main() {
int x,y,z,a,sum;
printf("Enter Number:");
scanf("%d",&x);
y=x%100;
z=y/10;
y=x/100;
a=x%10;
sum=y+z+a;
printf("hundred's digit= %d",y);
printf("ten's digit= %d",z);
printf("one's digit= %d",a);
printf("Sum= %d",sum);
     return 0;
     }


